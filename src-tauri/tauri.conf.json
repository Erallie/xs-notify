{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "XS Notify",
    "version": "1.1.0",
    "identifier": "com.Gozar-Productions.XS-Notify",
    "build": {
        "beforeDevCommand": "npm run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "npm run build",
        "frontendDist": "../build"
    },
    "app": {
        "windows": [
            {
                "label": "main",
                "title": "XS Notify",
                "width": 800,
                "height": 600
            },
            {
                "label": "update",
                "title": "XS Notify Updater",
                "url": "update",
                "width": 450,
                "height": 300,
                "resizable": false
            }
        ],
        "security": {
            "csp": null,
            "capabilities": [
                "main",
                "update"
            ]
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/16x16.png",
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.ico"
        ]
    }
}