{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "main",
    "description": "Capability for the main window",
    "windows": [
        "main"
    ],
    "permissions": [
        "core:default",
        "opener:default",
        "fs:create-app-specific-dirs",
        "log:allow-log",
        {
            "identifier": "fs:allow-write-file",
            "allow": [
                {
                    "path": "$APPCONFIG"
                }
            ]
        }
    ]
}